<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pro_doctor" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="activityLoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:theme">@style/activityLoginTextInputLayoutTheme</item>

    </style>

    <style name="activityLoginTextInputLayoutTheme">

        <item name="colorAccent">@color/lightGray</item>
        <item name="colorPrimary">@color/lightGray</item>

    </style>

    <style name="activityNewDoctorRadioBtnStyle">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17dp</item>
        <item name="android:buttonTint">@color/blue</item>

    </style>

    <style name="activityDoctorDetailsTextView">

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="activityDoctorDetailsBtns">

        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="cornerRadius">8dp</item>

    </style>

    <style name="communicateLayoutImgStyle">

        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="android:layout_margin">16dp</item>
        <item name="layout_constraintWidth_percent">0.11</item>

    </style>

    <style name="communicateLayoutTvStyle">

        <item name="android:padding">16dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>

    </style>

</resources>